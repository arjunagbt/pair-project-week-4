<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/head', {title: 'Dashboard'}) %>

<body>
  <div class="container">
    <div>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">Full Name:</th>
            <td>
              <%= user.full_name %>
            </td>
          </tr>
          <tr>
            <th scope="row">Email</th>
            <td>
              <%= user.email %>
            </td>
          </tr>
          <tr>
            <th scope="row">Balance</th>
            <td>
              <%= user.balance %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <form method="POST" action="/user/logout">
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>
    </div>
    <div class="row">
      <form method="POST" action="/user/add-balance">
        <div class="form-group">
          <label for="inputBalance">How much do you want to add?</label>
          <input type="number" class="form-control" id="inputBalance" name="balance" placeholder=0>
        </div>
        <button type="submit" class="btn btn-primary">Add Balance</button>
      </form>
    </div>
    <div class="row">
      <form method="POST" action="/user/withdraw-balance">
        <div class="form-group">
          <label for="inputBalance">How much do you want to withdraw?</label>
          <input type="number" class="form-control" id="inputBalance" name="balance" placeholder=0>
        </div>
        <button type="submit" class="btn btn-primary">Withdraw Balance</button>
      </form>
    </div>
    <div class="row">
      <h2>Your projects</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody>
          <% ownedProjects.forEach(project => { %>
          <tr>
            <td>
              <%= project.name %>
            </td>
            <td>
              <%= project.description %>
            </td>
            <td>
              <%= project.nominal_now %> /
              <%= project.nominal_needed %>
            </td>
            <td><a href="/projects/details/<%= project.id %>"><button type="button" class="btn btn-info">Project Page</button></a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <h2>Projects that you funded</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Your Participation</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody>
          <% fundedProjects.forEach(project => { %>
          <tr>
            <td>
              <%= project.Project.name %>
            </td>
            <td>
              <%= project.Project.description %>
            </td>
            <td>
              <%= project.nominal %>
            </td>
            <td><a href="/projects/details/<%= project.Project.id %>"><button type="button" class="btn btn-info">Project
                  Page</button></a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  </div>

  <%- include('../../partials/scripts') %>

</body>

</html>